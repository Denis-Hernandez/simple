{% extends 'base.html.twig' %}

{% block body %}
<h1 class='display-2 py-3 mb-4 border-bottom text-center'>Ingreso de Incidente</h1>
<div class="p-4 mb-4 bg-light rounded-3">
    {{form(form)}}
</div>
<div>
    <table class="table table-striped">
        <thead>
            <tr class="table-dark">
                <th>Tipo de incidente</th>
                <th>Jugador</th>
                <th>Fecha de Incidente</th>
                <th>Fecha de Suspencion</th>
                <th>Descripcion</th>
            </tr>
        </thead>
        <tbody>
        {% for incidente in incidentes %}
            <tr>
                <td> {{incidente.tipo}} </td>
                <td> {{incidente.usuario.nombre}} {{incidente.usuario.apellido}} </td>
                <td> {{incidente.fechaincidente | date("d/m/Y")}} </td>
                <td>
                    {% if incidente.fechasuspencion is not null %}
                        {{ incidente.fechasuspencion | date("d/m/Y") }}
                    {% else %}
                        Sin suspensi√≥n
                    {% endif %}
                </td>
                <td> {{incidente.descripcion}}</td>
            <tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}